<% layout("layouts/index") %>
    
         
    

  	 <% for(var i = article.length-5; i <= 0; i++) { %>
    
     <div class="col-md-12" id="news-holder">

     <div class="col-md-4">
     <img src="<%= article[i].image %>" alt="<%= article[i].name %>">
     </div>

     <div class="col-md-8">
  	 <h2><%= article[i].name %></h2>
     <p class="previewText"><%= makePreview(article[i].text) %><br><a href="/<%=article[i].id%>">Читати далі</a></p>
     </div>
     </div>
  	   <% }%>
       
